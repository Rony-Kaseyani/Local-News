<div id="content">
   <!-- page content -->
   <a href="/news/post">Post news item</a>
   <h2>My News</h2>
   {{#each articles}}
   <table>
      <tbody>
         <tr>
            <td><img src="/article_images/{{this.image}}" alt="Article Image" width="50" height="40"></td>
            <td><a href="/news/single/{{this.id}}">{{this.title}}</a></td>
            <td><a href="/news/single/{{this.id}}/edit">Edit</a></td>
            <td><a href="/news/single/{{this.id}}/delete">delete</a></td>
         </tr>
      </tbody>
   </table>
   {{/each}}
</div>