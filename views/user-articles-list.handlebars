<a href="/news/add-new">Post news item</a>
<h2>My News</h2>
{{#each articles}}
<table>
  <tbody>
    <tr>
      <td><img src="/article_images/{{this.image}}" alt="Article Image" width="50" height="40"></td>
      <td><a href="/news/article/{{this.id}}">{{this.title}}</a></td>
      <td><a href="/news/article/{{this.id}}/edit">Edit</a></td>
      <td>
        <form method="post" action="/news/article/{{this.id}}/delete">
          <input class="submit" type="submit" value="Delete" />
        </form>
      </td>
    </tr>
  </tbody>
</table>
{{/each}}
